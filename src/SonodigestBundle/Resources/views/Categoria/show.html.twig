{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Categoria</h1>

    <table class="record_properties" border="1" cellspacing="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_categoria') }}">
            Regresar a la lista
        </a>
    </li>
    <li>
        <a href="{{ path('admin_categoria_edit', { 'id': entity.id }) }}">
            Editar categoria actual
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
