    <script src="{{asset('Resources/js/photoswipe/imagesloaded.pkgd.js')}}"></script>
    <script src="{{asset('Resources/js/photoswipe/photoswipe.pkgd.js')}}"></script>
    <script src="{{ asset('Resources/wrapkit/scripts/demo/page-gallery-demo.js') }}"></script>

{% endblock %}



