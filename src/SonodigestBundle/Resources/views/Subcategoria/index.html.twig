{#{% extends '::base.html.twig' %}#}

{% block body -%}
    
    <h1>Lista de Subcategorias</h1>

    <table class="records_list" border="1" cellspacing=1>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Titulo</th>
                <th>Foto</th>
                <th>Descripcion</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_subcategoria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.foto }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_subcategoria_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_subcategoria_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <h3> 
                <a href="{{ path('admin_subcategoria_new') }}">
                    Crear una subcategoria
                </a>
            </h3>
        </li>
        <li>
            <h3> 
                <a href="{{ path('admin_panel') }}">
                    Regresar al panel administrativo
                </a>
            </h3>
        </li>
    </ul>     
{% endblock %}

{% block javascripts_step %}
    <script type="text/javascript" src="{{ asset('Resources/jquery/jquery_1.11.3.js')}}"></script>
{% endblock %}