{% extends 'SonodigestBundle:Layout:layoutpanel.html.twig' %}
{% block titulo %}Lista de Subcategorias{% endblock %}

{% block bod -%}
    {#<h1>Subcategoria</h1>#}
    <div class="container">
        <div class="row">
            <table class="table-bordered" style="margin: 0 auto; width: 80%;">
                <tbody>
                    {#<tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>#}
                    <tr>
                        <th class="text-center">Nombre</th>
                        <td class="text-center">{{ entity.nombre }}</td>
                    </tr>
                    <tr>
                        <th class="text-center">Titulo</th>
                        <td class="text-center">{{ entity.titulo }}</td>
                    </tr>
                    <tr>
                        <th class="text-center">Foto</th>
                        <td class="text-center">{{ entity.foto }}</td>
                    </tr>
                    <tr>
                        <th class="text-center">Descripcion</th>
                        <td class="text-justify" style="padding: 10px;">{{ entity.descripcion | raw }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    
    <div class="clearfix"></div>                

    
    <div class="col-md-4 text-center"><a href="{{ path('admin_subcategoria') }}"><div class="botonpanel" style="margin-left: 50px;">Regresar a la lista</div></a></div>                 
    <div class="col-md-4 text-center"><a href="{{ path('admin_subcategoria_edit', { 'id': entity.id }) }}"><div class="botonpanel" style="margin-left: 50px;">Editar</div></a></div>                 
    <div class="col-md-44 text-center">{{ form(delete_form) }}</div>                 
                    
</div>
{% endblock %}

