                <link rel="stylesheet" href="{{ asset('Resources/css/bootstrap.css') }}" />
                <link rel="stylesheet" href="{{ asset('Resources/css/style.css') }}" />
                <link rel="stylesheet" href="{{ asset('Resources/css/panel.css') }}" />
                {%- endblock %}
                {%- endblock%}
            </head>


            <body>
                {% block body -%}  
                    <div class="container">
                        <div class="row">
                            
                            <!-- Imagen Panel -->
                            {% block imagen %}
                                {% include 'SonodigestBundle:Layout:imagenpanel.html.twig'%}
                            {% endblock %}

                            <div class="col-md-4"></div>
