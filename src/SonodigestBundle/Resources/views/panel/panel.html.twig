                                <p><h1>Panel Administrativo</h1></p>
                            </div>
                            <div class="col-md-4"></div>
                            <div class="clearfix"></div>

                            <!-- Botones Panel -->
                            {% block botones %}
                                {% include 'SonodigestBundle:Layout:botonespanel.html.twig'%}
                            {% endblock %}

                            <div class="clearfix"></div>

                            <div class="col-md-12 text-center hr"></div>
                            <div class="clearfix"></div>
                            
                            <a href="{{ path('admin_categoria') }}">
                                <div class="clearfix"></div>
                                <div class="col-md-3 text-center">
                                    <div class="color1" style="margin-top: 10px; height: 20%; ">

                                        <div style="padding-top: 30%;"><h4>Gestión Categoria</h4></div>

                                    </div>
                                </div>
                            </a>
                            <a href="{{ path('admin_subcategoria') }}">
