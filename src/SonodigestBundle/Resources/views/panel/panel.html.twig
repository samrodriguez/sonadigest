                                    <div class="color2" style="margin-top: 10px; height: 20%;">

                                        <div style="padding-top: 30%;"><h4>Gestión Subcategoria</h4></div>

                                    </div>
                                </div>
                            </a>
                            <a href="{{ path('admin_problema') }}">
                                <div class="col-md-3 text-center">
                                    <div class="color1" style="margin-top: 10px; height: 20%;">

                                        <div style="padding-top: 30%;"><h4>Gestión Problema</h4></div>

                                    </div>
                                </div>
                            </a>
                            <a href="{{ path('admin_categoriablog') }}">
                                <div class="col-md-3 text-center">
                                    <div class="color2" style="margin-top: 10px; height: 20%;">

                                        <div style="padding-top: 30%;"><h4>Gestión Categoria de Blog</h4></div>

                                    </div>
                                </div>
                            </a>
                                
                            {#Segunda fila de opciones del panel#}
                            <div class="clearfix"></div>
                            <a href="{{ path('admin_entrada') }}">
                                <div class="col-md-3 text-center">
                                    <div class="color1" style="margin-top: 10px; height: 20%;">

                                        <div style="padding-top: 30%;"><h4>Gestión Entradas de Blog</h4></div>

                                    </div>
                                </div>
                            </a>
                            <a href="{{ path('admin_categoriaimagen') }}">
                                <div class="col-md-3 text-center">
                                    <div class="color2" style="margin-top: 10px; height: 20%;">

                                        <div style="padding-top: 30%;"><h4>Gestión Galeria de Imagenes</h4></div>

                                    </div>
                                </div>
                            </a>
                            <a href="{{  path('admin_tipocarrusel_edit',{id:1}) }}">
                                <div class="col-md-3 text-center">
                                    <div class="color1" style="margin-top: 10px; height: 20%;">

                                        <div style="padding-top: 30%;"><h4>Gestión Carrusel</h4></div>

                                    </div>
                                </div>
                            </a>
                            {#<a href="{{ path('admin_categoriablog') }}">
                                <div class="col-md-3 text-center">
                                    <div class="color2" style="margin-top: 10px; height: 20%;">

                                        <h4>Gestión Subcategoria de Blog</h4>

                                    </div>
                                </div>
                            </a>#}
                                
                        </div>
                    </div>
                {% endblock %}

                {% block javascripts_step %}
                    <script type="text/javascript" src="{{ asset('Resources/jquery/jquery_1.11.3.js')}}"></script>
                    <script type="text/javascript" src="{{ asset('Resources/bValidator-0.73/jquery.bvalidator.js')}}"></script>
                    <script type="text/javascript" src="{{ asset('Resources/bValidator-0.73/bvalidator.lang.es.js')}}" ></script>
                    <script src="{{ asset('Resources/funciones_validacion/usuario.js') }}"></script>
                    <script>
                        $(document).ready(function () {
                            validarUsuario();
                        });
                    </script>
                {% endblock %}
